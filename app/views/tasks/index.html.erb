<h1>Tasks</h1>
<%= link_to "Add task", new_task_path %>
<% @tasks.each do |task| %>
<h2><%= link_to task.title, task_path(task)%></h2>
<p>Status: <%= task.completed ? "Completed" : "Uncomplete" %></p>
<%= link_to "Edit", edit_task_path(task) %>
<%= link_to "Remove", task_path(task), method: :delete %>
<% end %>

